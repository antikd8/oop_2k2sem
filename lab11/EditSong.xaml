<Window x:Class="lab11.EditSong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab11"
        mc:Ignorable="d"
        Title="EditSong" Height="400" Width="400" Background="#C6AFC2">
    <Grid>
        <TextBlock FontSize="20"
                   FontWeight="bold"
                   Margin="20,0,0,0">Введите новое название песни</TextBlock>
        <TextBox x:Name="SongNameTBox" Width="200" FontSize="16" Height="40" Margin="0,-220,0,0"></TextBox>
        <TextBlock FontSize="20"
                   FontWeight="bold"
                   Margin="20,120,0,0">Выберите автора песни</TextBlock>
        <ComboBox x:Name="AuthorNameCBox" FontSize="16" Width="200" Height="40" ></ComboBox>
        <Button x:Name="Update" Width="200" Height="50" Margin="0,180,0,0" FontWeight="Bold" FontSize="16" Background="LightGreen" Click="Update_Click">ОБНОВИТЬ</Button>
    </Grid>
</Window>
