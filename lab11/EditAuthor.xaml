<Window x:Class="lab11.EditAuthor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab11"
        mc:Ignorable="d"
        Title="EditAuthor" Height="450" Width="400" Background="#C6AFC2">
    <Grid>
        <TextBlock FontSize="20" Margin="100,0,0,0">Введите имя автора</TextBlock>
        <TextBox x:Name="AuthorNameTBox" Width="200" FontSize="16" Height="50" Margin="0,-280,0,0"></TextBox>
        <TextBlock FontSize="20" Margin="100,120,0,0">Введите возраст автора</TextBlock>
        <TextBox x:Name="AgeTBox" Width="200" FontSize="16" Height="50" Margin="0,-20,0,0"></TextBox>
        <Button x:Name="Update" 
                Width="200" 
                Height="50" 
                Background="LightGreen" 
                Margin="0,150,0,0" 
                FontSize="20" 
                FontWeight="Bold"
                Content="ОБНОВИТЬ" Click="Update_Click"></Button>
    </Grid>
</Window>
